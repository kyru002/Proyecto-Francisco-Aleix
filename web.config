<?xml version="1.0" encoding="utf-8"?>
<!--
  Configuración para Azure App Service (Windows)
  Este archivo le dice a IIS cómo ejecutar la aplicación Node.js
-->
<configuration>
  <system.webServer>
    <!-- Indica que vamos a usar iisnode para ejecutar Node.js -->
    <handlers>
      <add name="iisnode" path="backend/server.js" verb="*" modules="iisnode"/>
    </handlers>
    
    <!-- Reglas de reescritura para enrutar todo a server.js -->
    <rewrite>
      <rules>
        <!-- No tocar archivos estáticos -->
        <rule name="StaticContent">
          <action type="Rewrite" url="public{REQUEST_URI}"/>
        </rule>
        
        <!-- Enrutar todo lo demás a Node.js -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True"/>
          </conditions>
          <action type="Rewrite" url="backend/server.js"/>
        </rule>
      </rules>
    </rewrite>
    
    <!-- Configuración de iisnode -->
    <iisnode
      nodeProcessCommandLine="&quot;%programfiles%\nodejs\node.exe&quot;"
      interceptor="&quot;%programfiles%\iisnode\interceptor.js&quot;"
      debuggingEnabled="false"
      loggingEnabled="true"
      devErrorsEnabled="false"
      node_env="production"
    />
    
    <!-- Asegurar que errores 404 se manejen correctamente -->
    <httpErrors existingResponse="PassThrough" />
    
    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>
  </system.webServer>
</configuration>
